<p><%= @task.details %></p>



 <% if @task.completed %>
  <p><i class="far fa-check-square"></i> This task is completed</p>
  <% else %>
  <p><i class="far fa-square"></i> This task is not completed yet</p>
  <% end %>


<%= link_to "back to tasks", tasks_path %>
<%= link_to "edit", task_edit_path %>


<%= link_to "Delete", destroy_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
